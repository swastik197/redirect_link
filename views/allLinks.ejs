<!DOCTYPE html>
<html>
<head>
    <title>All Links Data</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">
    <div class="container mx-auto py-8">
        <h1 class="text-3xl font-bold mb-6 text-center">All Links</h1>
        <div class="overflow-x-auto">
            <table class="min-w-full bg-white rounded-lg shadow">
                <thead>
                    <tr>
                        <th class="py-3 px-4 border-b text-left">Project Name</th>
                        <th class="py-3 px-4 border-b text-left">Link</th>
                        <th class="py-3 px-4 border-b text-left">Clicks</th>
                        <th class="py-3 px-4 border-b text-left">Details</th>
                    </tr>
                </thead>
                <tbody>
                    <% links.forEach(function(link) { %>
                        <tr class="hover:bg-gray-50">
                            <td class="py-2 px-4 border-b"><%= link.projectName %></td>
                            <td class="py-2 px-4 border-b"><a href="<%= link.link %>" target="_blank" class="text-blue-600 hover:underline"><%= link.link %></a></td>
                            <td class="py-2 px-4 border-b"><%= link.clicks.length %></td>
                            <td class="py-2 px-4 border-b"><a href="/details/<%= link.projectName %>" class="bg-blue-500 text-white px-3 py-1 rounded hover:bg-blue-600">View Clicks</a></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html> 